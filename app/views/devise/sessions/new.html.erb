<div class="text-center border border-light p-5 auth">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <p class="h4 mb-4">Login</p>

    <%= f.email_field :email, placeholder: "E-mail", autofocus: true, autocomplete: "email", class: "form-control mb-4", id: "defaultLoginFormEmail", required: true %>

    <%= f.password_field :password, placeholder: "Passwort", autocomplete: "current-password", class: "form-control mb-4", id: "defaultLoginFormPassword", required: true %>

    <% if devise_mapping.rememberable? %>
      <div class="d-flex justify-content-around">
        <div>
            <!-- Remember me -->
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, value: "Eingeloggt bleiben" %>
        </div>
        <div>
          <!-- Forgot password -->
          <%= link_to "Passwort vergessen?", new_password_path(resource_name), class: "link" %>
        </div>
      </div>
    <% end %>

    <%= f.submit "Einloggen", class: "button auth-buttons" %>

    <!-- Register -->
    <p>Noch nicht registriert? Jetzt
      <%= link_to "Registrieren!", new_registration_path(resource_name), class: "link" %>
    </p>
  <% end %>
</div>

